{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "lib": ["ESNext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src", "../types"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "ts-node": {
    "files": true
  }
}
