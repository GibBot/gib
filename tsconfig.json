{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "es6",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "es2022", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["types", "node_modules/@types"],
  }
}
